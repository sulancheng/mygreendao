<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rxandroid.TableLayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/tl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/tabrow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/back_line"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="表格1">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/back_line"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="表格1"></TextView>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/back_line"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="表格1">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/back_line"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="表格1"></TextView>
                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/back_line"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="表格1">

                        </TextView>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/back_line"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="表格1">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/back_line"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="表格1"></TextView>
                    </TableRow>
                </TableLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/back_line"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="大个子"></TextView>
            </TableRow>

        </TableLayout>
    </LinearLayout>
</LinearLayout>